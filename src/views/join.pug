extends layouts/main

block content
  .background__container
    .form__container
      form.form__join(action=`/user${routes.join}`, method="post")
        input(type="text", name="name", placeholder="전체 이름", required=true, autocomplete="off")
        input(type="email", name="email", placeholder="이메일", required=true, autocomplete="off")
        input(type="password", name="password1", placeholder="비밀번호", required=true)
        input(type="password", name="password2", placeholder="비밀번호 확인", required=true)
        input(type="submit", value="가입하기")
      include partials/socialLogin
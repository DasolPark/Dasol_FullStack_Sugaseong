extends layouts/main
include mixins/boardBlock

block content
  .board__write
    form(action=`/board/${routes.writeBoard}`, method="get")
      input(type="submit", value="글 작성하기")
  .board__container
    each item in boards
      +boardBlock({
        id: item.id,
        title: item.title,
        views: item.views,
      })
  .board__search
    form(action=`/board/${routes.searchBoard}`, method="get")
      input(type="text", name="term", autocomplete="off", placeholder="검색어를 입력해주세요.")
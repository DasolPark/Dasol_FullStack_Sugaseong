extends layouts/main
include mixins/boardBlock

block content
  .searchingBy
    h3 "#{searchingBy}" 로 검색된 글
  .board__container
    each item in boards
      +boardBlock({
        id: item.id,
        title: item.title,
        views: item.views
      })
  .board__search
    form(action=`/board/${routes.searchBoard}`, method="get")
      input(type="text", name="term", placeholder="검색어를 입력해주세요.", autocomplete="off")